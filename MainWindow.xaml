<Window x:Class="VideoSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoSample"
        mc:Ignorable="d"
        WindowStyle="None"
AllowsTransparency="False"
ResizeMode="NoResize"
Title="MainWindow"
        WindowState="Maximized"
        >
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Width="500" HorizontalAlignment="Left">
                <TextBlock Text="Select Video Quality:" Margin="0,0,0,5"/>
                <ComboBox x:Name="VideoQualityCombo" SelectedIndex="0">
                    <ComboBoxItem Content="sample-file-HQ.mp4"/>
                    <ComboBoxItem Content="sample-file.mp4"/>
                </ComboBox>

                <TextBlock Text="Video Windows:" Margin="0,10,0,5"/>
                <TextBox x:Name="ExtraWindowsBox" Text="2"/>
                <Button Content="Start Test" Margin="0,20,0,0" Click="Button_Click"/>
            </StackPanel>
            <TextBox Name="LogTextBox" 
             IsReadOnly="True" 
             TextWrapping="Wrap" 
             VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </Grid>
</Window>
